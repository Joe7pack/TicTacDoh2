<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowTitleSize">25dip</item>
        <item name="android:windowFullscreen">true</item>
        <!-- item name="android:screenOrientation">landscape</item  this doesn't work here -->
        <item name="android:windowContentOverlay">@null</item>
        <!--
        item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
        -->
    </style>

    <style name="TicTacDoh2" parent="MainTheme">
        <item name="android:windowBackground">@drawable/willy_shmo_icon</item>
		<!-- this seems to have no effect here -->
        <!-- item name="android:background">#ffffff</item -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="WillyListTheme" parent="TicTacDoh2">
        <item name="windowActionBar">false</item>
        <item name="android:windowTitleSize">55dp</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#334455</item>
        <item name="android:textColorSecondary">#778899</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#009922</item>
        <item name="android:textColorSecondary">#AABBCC</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/background_splash</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
         A theme that has a translucent background.  Here we explicitly specify
         that this theme is to inherit from the system's translucent theme,
         which sets up various attributes correctly.
    -->

</resources>